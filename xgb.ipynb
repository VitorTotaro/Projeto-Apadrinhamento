from xgboost import XGBRegressor
from sklearn.metrics import mean_absolute_error, r2_score

xgb = XGBRegressor(
    n_estimators=800,       ##mais árvores, mas cada uma menor
    learning_rate=0.03,     ##aprendizado mais suave
    max_depth=5,            ##árvores menos profundas
    subsample=0.8,          ##amostra parcial (mais rápido)
    colsample_bytree=0.8,   ##usa parte das features
    reg_lambda=1.0,         ##regularização L2
    reg_alpha=0.5,          ##regularização L1
    n_jobs=-1,
    random_state=42
)

xgb.fit(X_train, y_train)
y_pred_xgb = xgb.predict(X_test)

print(f"XGBoost R²: {r2_score(y_test, y_pred_xgb):.4f}")
print(f"XGBoost MAE: {mean_absolute_error(y_test, y_pred_xgb):.2f}")
